{
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx,json,css,md,html,yaml,yml}": [
      "npm --prefix frontend run lint:pretty --",
      "npm --prefix frontend run lint:fix --"
    ],
    "backend/**/*.py": [
      "npm run ruff:format",
      "npm run ruff:check"
    ]
  },
  "scripts": {
    "prepare": "husky",
    "ruff:format": "ruff format backend",
    "ruff:check": "ruff check backend --fix --exit-zero"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4"
  }
}
